    <!-- Initialize AOS with Accessibility Support -->
    <script>
        // Animation toggle state
        let animationsEnabled = true;
        
        // Check for user's manual preference
        const userPreference = localStorage.getItem('animationsEnabled');
        if (userPreference !== null) {
            animationsEnabled = userPreference === 'true';
        }
        
        // Initialize AOS
        AOS.init({
            duration: 800,
            easing: 'ease-in-out',
            once: false,
            offset: 100,
            disable: !animationsEnabled
        });
        
        // Update UI elements with current status
        function updateUI() {
            // Update both mobile and desktop toggle buttons
            const toggleButtons = [
                'animation-toggle-mobile', 
                'animation-toggle-desktop'
            ];
            
            toggleButtons.forEach(buttonId => {
                const btn = document.getElementById(buttonId);
                if (btn) {
                    const icon = btn.querySelector('i');
                    const text = btn.querySelector('.toggle-text') || btn.querySelector('small') || btn.querySelector('span');
                    
                    if (animationsEnabled) {
                        icon.className = 'fas fa-eye-slash me-1';
                        if (text) {
                            text.textContent = 'Disable Animations';
                        }
                        btn.setAttribute('aria-label', 'Disable scroll animations');
                        btn.title = 'Disable scroll animations';
                    } else {
                        icon.className = 'fas fa-eye me-1';
                        if (text) {
                            text.textContent = 'Enable Animations';
                        }
                        btn.setAttribute('aria-label', 'Enable scroll animations');
                        btn.title = 'Enable scroll animations';
                    }
                }
            });
        }
        
        // Simple toggle function with page reload
        function toggleAnimations() {
            const newState = !animationsEnabled;
            localStorage.setItem('animationsEnabled', newState.toString());
            
            // Show feedback message
            const message = newState ? 'Animations enabled' : 'Animations disabled';
            showFeedback(message);
            
            // Reload page after delay
            setTimeout(() => window.location.reload(), 500);
        }
        
        // Show user feedback popup
        function showFeedback(message) {
            let popup = document.getElementById('animation-feedback');
            if (!popup) {
                popup = document.createElement('div');
                popup.id = 'animation-feedback';
                popup.className = 'animation-feedback';
                document.body.appendChild(popup);
            }
            
            popup.textContent = message;
            popup.setAttribute('role', 'status');
            popup.setAttribute('aria-live', 'polite');
            
            setTimeout(() => {
                popup.classList.add('show');
            }, 100);
        }
        
        // Initialize when DOM is ready
        document.addEventListener('DOMContentLoaded', function() {
            // Update UI
            updateUI();
            
            // Add toggle button listeners
            const toggleButtons = [
                'animation-toggle-mobile', 
                'animation-toggle-desktop'
            ];
            toggleButtons.forEach(id => {
                const btn = document.getElementById(id);
                if (btn) {
                    btn.addEventListener('click', function(e) {
                        e.preventDefault();
                        toggleAnimations();
                    });
                }
            });
            
            // Mobile menu close functionality
            const navbarToggler = document.querySelector('.navbar-toggler');
            const navbarCollapse = document.querySelector('#navbarNav');
            
            if (navbarToggler && navbarCollapse) {
                // Close menu when clicking outside
                document.addEventListener('click', function(event) {
                    const isMenuOpen = navbarCollapse.classList.contains('show');
                    const isClickInsideMenu = navbarCollapse.contains(event.target);
                    const isClickOnToggler = navbarToggler.contains(event.target);
                    
                    // Close menu if it's open and click is outside menu and not on toggler
                    if (isMenuOpen && !isClickInsideMenu && !isClickOnToggler) {
                        const bsCollapse = new bootstrap.Collapse(navbarCollapse, {
                            toggle: false
                        });
                        bsCollapse.hide();
                    }
                });
                
                // Close menu when pressing Escape key
                document.addEventListener('keydown', function(event) {
                    const isMenuOpen = navbarCollapse.classList.contains('show');
                    
                    if (event.key === 'Escape' && isMenuOpen) {
                        const bsCollapse = new bootstrap.Collapse(navbarCollapse, {
                            toggle: false
                        });
                        bsCollapse.hide();
                        
                        // Return focus to the toggle button for accessibility
                        navbarToggler.focus();
                    }
                });
                
                // Close menu when clicking on a navigation link (except dropdown toggles)
                const navLinks = navbarCollapse.querySelectorAll('.nav-link:not(.dropdown-toggle)');
                navLinks.forEach(link => {
                    link.addEventListener('click', function() {
                        const isMenuOpen = navbarCollapse.classList.contains('show');
                        
                        if (isMenuOpen) {
                            const bsCollapse = new bootstrap.Collapse(navbarCollapse, {
                                toggle: false
                            });
                            bsCollapse.hide();
                        }
                    });
                });
            }
            
        });
    </script>
